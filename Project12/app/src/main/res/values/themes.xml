<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project122" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btn1">
        <item name="android:text">Выберите цвет фона</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35dp</item>
    </style>
    <style name="btn2">
        <item name="android:text">Откройте третью активность</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35dp</item>
    </style>
    <style name="back">
        <item name="textAllCaps">false</item>
        <item name="android:text">Back</item>
        <item name="backgroundTint">@color/back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="tv">
        <item name="android:text">Третья активность</item>
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>