<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DatePicker Activity"
        android:textSize="22sp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textviewdategive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/bookgive"
            android:textSize="15sp"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/textviewdateout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/bookback"
            android:textSize="15sp"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Установить дату получения книги"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:onClick="bookgive_Click"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Установить дату возврата книги"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:onClick="bookout_Click"/>
    </LinearLayout>

    <DatePicker
        android:id="@+id/datething"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginHorizontal="30dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Установить текущую дату для DatePicker"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:onClick="date_Click"/>
</LinearLayout>