<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLL"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        style="@style/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text="TextView1" />
    <TextView
        android:id="@+id/tv2"
        android:text="TextView2"
        style="@style/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>
    <Button
        android:id="@+id/btn1"
        android:onClick="toRedGreen"
        android:text="Red-Green"
        style="@style/btn1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <Button
        android:id="@+id/btn2"
        android:onClick="toYellowBlue"
        android:text="Yellow-Blue"
        style="@style/btn2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <Button
        android:id="@+id/btn3"
        android:onClick="toBlackWhite"
        android:text="Black-White"
        style="@style/btn36"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn4"
            android:onClick="toRed"
            android:text="Red"
            style="@style/btn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp" />
        <Button
            android:id="@+id/btn5"
            android:onClick="toBlue"
            android:text="Blue"
            style="@style/btn5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn6"
            android:onClick="toBlack"
            android:text="Black"
            style="@style/btn36"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp" />
    </LinearLayout>
</LinearLayout>